{
  "swagger": "2.0",
  "info": {
    "title": "RwPay API",
    "version": "0.0.0"
  },
  "basePath": "/api",
  "paths": {
    "/oauth/token": {
      "post": {
        "summary": "Create password grant token",
        "parameters": [
          {
            "name": "grant_type",
            "in": "query",
            "description": "grant type should be password",
            "required": true,
            "type": "string"
          },
          {
            "name": "client_id",
            "in": "query",
            "description": "client_id should be the one you get from rwpay",
            "required": true,
            "type": "string"
          },
          {
            "name": "client_secret",
            "in": "query",
            "description": "client_secret should be the one receiced from rwpay",
            "required": true,
            "type": "string"
          },
          {
            "name": "username",
            "in": "query",
            "description": "username (your email use on rwpay)",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "password (your pasword use on rwpay)",
            "required": true,
            "type": "string"
          },
          {
            "name": "scope",
            "in": "query",
            "description": "scope (leave it blank)",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "406": {
            "description": "not acceptable"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    },
    "/transaction_token": {
      "post": {
        "summary": "create atransaction token",
        "parameters": [
          {
            "name": " commerce_transaction_number",
            "in": "query",
            "description": "commerce unique number",
            "required": true,
            "type": "string"
          },
          {
            "name": " amount",
            "in": "query",
            "description": "amount to be paid",
            "required": true,
            "type": "string"
          },
          {
            "name": "payment_type",
            "in": "query",
            "description": "payment type(momo,airtel,card)",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "406": {
            "description": "not acceptable"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    }
  },
  "definitions": {}
}
